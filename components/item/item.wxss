/* components/searchInput/search.wxss */
.img-wrapper {
  width: 100%;
  margin: 0 auto;
}

.img-wrapper .image {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.content-panel {
  width: 90%;
  margin: 0 auto;
}

.title {
  margin: 10rpx 0;
  height: 60rpx;
  font-size: 32rpx;
}

.detail {
  margin: 10rpx 0;
  font-size: 32rpx;
  color: rgba(16, 16, 16, 1);
}

.buy-wrapper {
  margin: 10rpx 0;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.price {
  margin: 10rpx 0;
  color: #FF0000;
  font-size: 36rpx;
  font-weight: bold;
}

.buy-wrapper .cart {
  width: 60rpx;
  height: 60rpx;
}

.btn-wrapper {
  width: 100%;
  overflow: hidden;
}

.btn-wrapper .button {
  float: right;
  padding: 0;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #fff;
  margin-left: 10rpx;
}

.preview-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(87, 87, 87, 0.8);
  z-index: 999;
}

.preview-container .img-wrapper {
  width: 80%;
  height: 60%;
  margin: 50rpx auto;
}

.preview-container .img-wrapper .image {
  width: 100%;
  height: 100%;
}

.preview-container .text-wrapper {
  width: 80%;
  margin: 20rpx auto;
}

.preview-container .text-wrapper .text {
  font-size: 28rpx;
  color: #fff;
}

.img-left,
.img-right {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 50%;
}

.img-left {
  left: 0;
}

.img-right {
  right: 0;
}