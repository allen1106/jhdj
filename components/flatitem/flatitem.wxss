/* components/flatitem/flatitem.wxss */
.co-red {
  color: #FF0000;
}

.content-panel {
  position: relative;
  width: 100%;
  margin: 0 auto;
  display: flex;
  align-items: center;  
}

.img-wrapper {
  width: 140rpx;
  height: 140rpx;
}

.img-wrapper .image {
  width: 100%;
  height: 100%;
}

.text-wrapper {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
  height: 140rpx;
  width: 50%;
}

.status-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  padding: 0 5rpx;
  text-align: center;
  align-content: center;
  font-size: 24rpx;
  color: #fff;
  background-color: #FFC125;
}

label {
  color: #00c0ff;
}