/* pages/order/order.wxss */
.header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 200rpx;
  padding-top: 20rpx;
  background-color: #00A4FF;
}

.page-item {
  width: 90%;
  margin: 0 auto;
}

.switch-tab {
  width: 100%;
  height: 90rpx;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.2);
  color: #fff;
  font-size: 32rpx;
}

.switch-tab>view{
  flex: 1;
  height: 90rpx;
  margin: auto;
  display: inline-flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.active{
  height: 85rpx;
  border-bottom: 5rpx solid #FFFF8C;
}
swiper{
  width: 100%;
}
swiper-item{
  display: flex;
  font-size: 44rpx;
  align-items: center;
  justify-content: center;
}

.item-list {
  width: 90%;
  margin: 0 auto;
}

.item-wrapper {
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}